// @import .scss => styles
div
  div(className='{cx(styles.root, containerStyle)}',
    ref='{this.containerRef}')

    Guideline(@if='top',    ref='{this.guidelineRef.top}',    type='top',    guidelineStyle='{guidelineStyle}', length='{contentWidth}',  distance='{top.height}')
    Guideline(@if='bottom', ref='{this.guidelineRef.bottom}', type='bottom', guidelineStyle='{guidelineStyle}', length='{contentWidth}',  distance='{bottom.height + (scrollbarX ? scrollbarWidth : 0)}')
    Guideline(@if='left',   ref='{this.guidelineRef.left}',   type='left',   guidelineStyle='{guidelineStyle}', length='{contentHeight}', distance='{left.width}')
    Guideline(@if='right',  ref='{this.guidelineRef.right}',  type='right',  guidelineStyle='{guidelineStyle}', length='{contentHeight}', distance='{right.width + (scrollbarY ? scrollbarWidth : 0)}')

    //- .guideline-top(@if='top',
    //-   ref='{this.guideLineRef.top}',
    //-   className='{styles.guide}',
    //-   style='{{ top: top.height, width: contentWidth }}'
    //-   )
    //- .guideline-bottom(@if='bottom',
    //-   ref='{this.guideLineRef.bottom}',
    //-   className='{styles.guide}',
    //-   style='{{ bottom: bottom.height + (scrollbarX ? scrollbarWidth : 0), width: contentWidth }}'
    //-   )  
    //- .guideline-left(@if='left',
    //-   ref='{this.guideLineRef.left}',
    //-   className='{styles.guide}',
    //-   style='{{ left: left.width, height: contentHeight }}'
    //-   )  
    //- .guideline-right(@if='right',
    //-   ref='{this.guideLineRef.right}',
    //-   className='{styles.guide}',
    //-   style='{{ right: right.width + (scrollbarY ? scrollbarWidth : 0), height: contentHeight }}'
    //-   )  
    //- pre {rowSpan + ' x ' + colSpan}
    //- pre {overallWidth + ' x ' + overallHeight}
    //- pre {this.props.width + ' x ' + this.props.height}

    table(className='{styles.table}', border='{0}', cellPadding='{0}', cellSpacing='{0}',
      ref='{this.tableRef}')
      tbody
        tr(@if='top')
          //- td(@if='left', className='{styles.bg_50}')
          td(@if='left')
            | {this.renderGrid({ section: ['top', 'left'], ...top, ...left })}
          //- td(className='{styles.bg_100}')
          td
            | {this.renderGrid({ section: ['top', 'center'], ...center, ...top })}
          //- td(@if='right', className='{styles.bg_200}')
          td(@if='right')
            | {this.renderGrid({ section: ['top', 'right'], ...top, ...right })}
          td(@if='scrollbarY', rowSpan='{rowSpan}')
            Scrollbar(__jsx='{...scrollbar.y}')

        tr
          //- td(@if='left', className='{styles.bg_100}')
          td(@if='left')
            | {this.renderGrid({ section: ['middle', 'left'], ...center, ...left })}
          //- td(className='{styles.bg_200}')
          td
            | {this.renderGrid({ section: ['middle', 'center'], ...center })}
          //- td(@if='right', className='{styles.bg_300}')
          td(@if='right')
            | {this.renderGrid({ section: ['middle', 'right'], ...center, ...right })}
          td(@if='scrollbarY && !top', rowSpan='{rowSpan}')
            Scrollbar(__jsx='{...scrollbar.y}')

        tr(@if='bottom')
          //- td(@if='left', className='{styles.bg_200}')
          td(@if='left')
            | {this.renderGrid({ section: ['bottom', 'left'], ...bottom, ...left })}
          //- td(className='{styles.bg_300}')
          td
            | {this.renderGrid({ section: ['bottom', 'center'], ...center, ...bottom })}
          //- td(@if='right', className='{styles.bg_400}')
          td(@if='right')
            | {this.renderGrid({ section: ['bottom', 'right'], ...bottom, ...right })}

        tr(@if='scrollbarX')
          td(colSpan='{colSpan}')
            Scrollbar(__jsx='{...scrollbar.x}')
          td
  strong(ref='{this.titleRef}', style='{{ textAlign: "right" }}')